@model IEnumerable<Forum.Models.LogonLog>

@{
    ViewData["Title"] = "Login registrations";
}

<h1>@ViewData["Title"]</h1>
<h5 style="font-size: medium;">Here we have the registration about all login users, considering the time that they realized the login.</h5>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<table style="margin-top:80px" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td style="word-wrap:break-word; font-size:small">
                    @Html.DisplayFor(modelItem => item.LogData)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.LogonLogId">Edit</a> |*@
                    <a asp-action="Details" asp-route-id="@item.LogonLogId">Details</a>
                    @*<a asp-action="Delete" asp-route-id="@item.LogonLogId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
