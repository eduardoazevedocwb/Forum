<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">

</head>
<body style="font-family: 'Poppins'; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; background-color: #F2F1EF; ">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" style="margin-bottom: 40px !important">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Topics" asp-action="Index" 
                   style="margin-right: 5%; 
                          font-weight:bold">Forum</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="padding-top: 45px;">
                            <a class="nav-link text-dark" style="white-space: nowrap; color: lightgray !important;" asp-area="" asp-controller="Topics" asp-action="Index">Topics</a>
                        </li>
                        <li class="nav-item" style="padding-top: 45px;">
                            <a class="nav-link text-dark" style="white-space: nowrap; color: lightgray !important;" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item" style="padding-top: 45px;">
                            <a class="nav-link text-dark" style="white-space: nowrap; color: lightgray !important;" asp-area="" asp-controller="TopicLogs" asp-action="Index">Topic Logs</a>
                        </li>
                        <li class="nav-item" style="padding-top: 45px;">
                            <a class="nav-link text-dark" style="white-space: nowrap; color: lightgray !important;" asp-area="" asp-controller="LogonLogs" asp-action="Index">Login Logs</a>
                        </li>
                        <li class="nav-item" style="padding-top: 45px;">
                            <a class="nav-link text-dark" style="white-space: nowrap; color: lightgray !important;" asp-area="" asp-controller="Logons" asp-action="Index">Login</a>
                        </li>
                        <li class="nav-item" style="width:100%">
                            <div class="row">
                                <div class="col-12 col-sm-7 col-md-7"></div>
                                <div class="col-12 col-sm-5 col-md-5" style="font-size: small;">
                                    <partial name="LogonPartial" model="new Logon { id=0, User = string.Empty, Password=string.Empty}" />
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Forum
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>   
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
