@model Forum.Models.TopicLog

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this topic?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Action)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Action)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LogData)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TopicLogId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
